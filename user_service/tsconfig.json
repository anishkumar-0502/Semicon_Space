{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "rootDir": "./",
        "outDir": "./dist",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": [
            "node"
        ],
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}